{
  "openapi": "3.0.0",
  "info": {
    "title": "New Project API",
    "version": "1.0.0",
    "description": "API for managing items and users for the CSE341 New Project assignment."
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local Development Server"
    },
    {
      "url": "https://cse341-1-tt5h.onrender.com",
      "description": "Render Deployment Server"
    }
  ],
  "tags": [
    {
      "name": "Items",
      "description": "Endpoints for managing items"
    },
    {
      "name": "Users",
      "description": "Endpoints for managing users"
    },
    {
      "name": "Auth",
      "description": "Authentication endpoints"
    }
  ],
  "paths": {
    "/login": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Login with GitHub",
        "description": "Redirects the user to GitHub to log in.",
        "responses": {
          "200": {
            "description": "Redirects to GitHub"
          }
        }
      }
    },
    "/logout": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Logout",
        "description": "Logs the user out and clears the session.",
        "responses": {
          "200": {
            "description": "Successfully logged out"
          }
        }
      }
    },
    "/items": {
      "get": {
        "tags": [
          "Items"
        ],
        "summary": "Retrieves a list of all items",
        "responses": {
          "200": {
            "description": "A list of items.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Item"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Items"
        ],
        "summary": "Creates a new item",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Item successfully created."
          },
          "400": {
            "description": "Invalid input or data failed validation."
          }
        }
      }
    },
    "/items/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "The unique MongoDB ID of the item."
        }
      ],
      "get": {
        "tags": [
          "Items"
        ],
        "summary": "Retrieves a single item by ID",
        "responses": {
          "200": {
            "description": "Successfully retrieved item."
          },
          "400": {
            "description": "Invalid ID format."
          },
          "404": {
            "description": "Item not found."
          }
        }
      },
      "put": {
        "tags": [
          "Items"
        ],
        "summary": "Updates an existing item by ID",
        "description": "Requires Authentication.",
        "security": [
          {
            "oauth2": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Item successfully updated and returned."
          },
          "400": {
            "description": "Invalid ID format."
          },
          "401": {
            "description": "Unauthorized - User is not logged in."
          },
          "404": {
            "description": "Item not found."
          },
          "422": {
            "description": "Validation failed during update."
          }
        }
      },
      "delete": {
        "tags": [
          "Items"
        ],
        "summary": "Deletes an item by ID",
        "description": "Requires Authentication.",
        "security": [
          {
            "oauth2": []
          }
        ],
        "responses": {
          "204": {
            "description": "Item successfully deleted (No Content)."
          },
          "400": {
            "description": "Invalid ID format."
          },
          "401": {
            "description": "Unauthorized - User is not logged in."
          },
          "404": {
            "description": "Item not found."
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Retrieves a list of all users",
        "responses": {
          "200": {
            "description": "A list of users.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Creates a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User successfully created."
          },
          "400": {
            "description": "Invalid input or data failed validation."
          }
        }
      }
    },
    "/users/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "The unique MongoDB ID of the user."
        }
      ],
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Retrieves a single user by ID",
        "responses": {
          "200": {
            "description": "Successfully retrieved user."
          },
          "400": {
            "description": "Invalid ID format."
          },
          "404": {
            "description": "User not found."
          }
        }
      },
      "put": {
        "tags": [
          "Users"
        ],
        "summary": "Updates an existing user by ID",
        "description": "Requires Authentication.",
        "security": [
          {
            "oauth2": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User successfully updated and returned."
          },
          "400": {
            "description": "Invalid ID format."
          },
          "401": {
            "description": "Unauthorized - User is not logged in."
          },
          "404": {
            "description": "User not found."
          },
          "422": {
            "description": "Validation failed during update."
          }
        }
      },
      "delete": {
        "tags": [
          "Users"
        ],
        "summary": "Deletes a user by ID",
        "description": "Requires Authentication.",
        "security": [
          {
            "oauth2": []
          }
        ],
        "responses": {
          "204": {
            "description": "User successfully deleted (No Content)."
          },
          "400": {
            "description": "Invalid ID format."
          },
          "401": {
            "description": "Unauthorized - User is not logged in."
          },
          "404": {
            "description": "User not found."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Item": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "654c60d5b035f8c6b7588102"
          },
          "name": {
            "type": "string",
            "example": "Project Requirement Checklist"
          },
          "value": {
            "type": "number",
            "example": 1
          },
          "description": {
            "type": "string",
            "example": "A detailed checklist of all project requirements."
          },
          "category": {
            "type": "string",
            "example": "Other"
          },
          "stock": {
            "type": "integer",
            "example": 100
          },
          "sku": {
            "type": "string",
            "example": "PRJ-001"
          },
          "isActive": {
            "type": "boolean",
            "example": true
          },
          "__v": {
            "type": "number",
            "example": 0
          }
        }
      },
      "ItemInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "New Item Name"
          },
          "value": {
            "type": "number",
            "example": 50
          },
          "description": {
            "type": "string",
            "example": "A description of the new item."
          },
          "category": {
            "type": "string",
            "enum": [
              "Electronics",
              "Books",
              "Clothing",
              "Other"
            ],
            "example": "Electronics"
          },
          "stock": {
            "type": "integer",
            "example": 20
          },
          "sku": {
            "type": "string",
            "example": "SKU-12345"
          },
          "isActive": {
            "type": "boolean",
            "example": true
          }
        },
        "required": [
          "name",
          "value",
          "description",
          "sku"
        ]
      },
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "654c60d5b035f8c6b7588999"
          },
          "username": {
            "type": "string",
            "example": "johndoe"
          },
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "role": {
            "type": "string",
            "example": "user"
          },
          "createdDate": {
            "type": "string",
            "format": "date-time"
          },
          "__v": {
            "type": "number",
            "example": 0
          }
        }
      },
      "UserInput": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "janedoe"
          },
          "email": {
            "type": "string",
            "example": "jane@example.com"
          },
          "role": {
            "type": "string",
            "enum": [
              "user",
              "admin",
              "guest"
            ],
            "example": "user"
          }
        },
        "required": [
          "username",
          "email"
        ]
      }
    },
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "description": "GitHub OAuth2 Flow",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://github.com/login/oauth/authorize",
            "tokenUrl": "https://github.com/login/oauth/access_token",
            "scopes": {}
          }
        }
      }
    }
  }
}